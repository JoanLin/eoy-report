{
	"compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "strictNullChecks": true,
        "experimentalDecorators": true
	},
	"include": [
		"./data-scripts/src"
	],
	"compileOnSave": true
}
